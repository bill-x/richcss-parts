<!DOCTYPE html>
<html>
	<head>
	  <title>RichCSS Parts</title>
	  <%= stylesheet_link_tag 'application' %>
	  <%= javascript_include_tag 'application' %>
	  <%= csrf_meta_tags %>
	</head>

  <body>
    <%= render partial: "partials/header" %>
		<div class="col-md-2"></div>

   	<div class="col-md-8">
      <div class="padding-top-30">
        <h1><%= @part[:name] %></h1>
      </div>

      <h4 class="display-inline-block"><i><%= @part[:description] %></i></h4>
      <h4 class="display-inline-block position-absolute-right">	
      	<div class="glyphicon glyphicon-download"></div> <%= @part[:total_downloads] %>
      </h4>

      <div class="padding-top-5">
      	Version: 
        <select class="form-control width-auto">
          <% @versions.each do |version| %>
				    <option value="<%= version %>"><%= version %></option>
				  <% end %>
				</select>
			</div>

      <div class="padding-top-15">
      	Install via Command Line: <br>
      	parts install <%= @part[:name] %>
      </div>
    </div>

    <div class="col-md-2"></div>

    <%= render partial: "partials/footer" %>
  </body>
</html>